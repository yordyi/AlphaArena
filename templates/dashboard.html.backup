                                </div>
                                <div class="position-info-item">
                                    <span class="position-info-label">ÂºÄ‰ªì‰ª∑</span>
                                    <span class="position-info-value">$${pos.entry_price.toFixed(2)}</span>
                                </div>
                                <div class="position-info-item">
                                    <span class="position-info-label">ÂΩìÂâç‰ª∑</span>
                                    <span class="position-info-value">$${pos.current_price.toFixed(2)}${priceArrow}</span>
                                </div>
                            </div>
                            <div class="position-pnl ${pnlClass}">
                                <div class="position-pnl-value">
                                    ${pnlSign}$${Math.abs(pos.pnl_usd).toFixed(2)}
                                </div>
                                <div class="position-pnl-pct">
                                    ${pnlSign}${pos.pnl_pct.toFixed(2)}%
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');
            }
        });

        // Initial load
        updateChart();
        updateTrades();
        updateDecisions();

        setInterval(() => {
            updateChart();
        }, 10000);

        setInterval(() => {
            updateTrades();
        }, 5000);

        setInterval(() => {
            updateDecisions();
        }, 2 * 60 * 1000);

        // ==================== Binance REST API ÂÆûÊó∂‰ª∑Ê†ºÔºàÊõ¥ÂèØÈù†Ôºâ====================

        const priceSymbols = ['BTCUSDT', 'ETHUSDT', 'BNBUSDT', 'SOLUSDT', 'XRPUSDT', 'ADAUSDT'];
        const previousPricesWS = {};

        // ‰ΩøÁî®REST APIËé∑ÂèñÂÆûÊó∂‰ª∑Ê†ºÔºàÊØè2ÁßíÊõ¥Êñ∞‰∏ÄÊ¨°Ôºâ
        function fetchBinancePrices() {
            // ÊâπÈáèËé∑ÂèñÊâÄÊúâ‰∫§ÊòìÂØπÁöÑ24Â∞èÊó∂ticker
            const symbolsQuery = priceSymbols.map(s => `"${s}"`).join(',');

            fetch(`https://api.binance.com/api/v3/ticker/24hr?symbols=[${symbolsQuery}]`)
                .then(response => response.json())
                .then(data => {
                    if (Array.isArray(data)) {
                        data.forEach(ticker => {
                            const symbol = ticker.symbol;
                            const price = parseFloat(ticker.lastPrice);
                            const priceChange = parseFloat(ticker.priceChangePercent);

                            updateTickerPrice(symbol, price, priceChange);
                        });
                    }
                })
                .catch(error => {
                    console.error('%c‚ùå ‰ª∑Ê†ºËé∑ÂèñÂ§±Ë¥•:', 'color: #EF4444;', error);
                    // Â§±Ë¥•ÂêéÁªßÁª≠ÈáçËØï
                });
        }

        // ÂàùÂßãÂä†ËΩΩ
        console.log('%cüí∞ ÂêØÂä®ÂÆûÊó∂‰ª∑Ê†ºÊõ¥Êñ∞...', 'color: #2DD4BF; font-weight: bold;');
        fetchBinancePrices();

        // ÊØè2ÁßíÊõ¥Êñ∞‰∏ÄÊ¨°‰ª∑Ê†º
        setInterval(fetchBinancePrices, 2000);

        function updateTickerPrice(symbol, price, priceChange) {
            const priceElem = document.getElementById(`price-${symbol}`);
            const changeElem = document.getElementById(`change-${symbol}`);
            const arrowElem = document.getElementById(`arrow-${symbol}`);
            const tickerItem = document.querySelector(`.ticker-item[data-symbol="${symbol}"]`);

            if (!priceElem || !changeElem || !arrowElem) return;

            // Ê†ºÂºèÂåñ‰ª∑Ê†ºÔºàÊ†πÊçÆ‰ª∑Ê†ºÂ§ßÂ∞èÂÜ≥ÂÆöÂ∞èÊï∞‰ΩçÔºâ
            let formattedPrice;
            if (price >= 1000) {
                formattedPrice = '$' + price.toFixed(2);
            } else if (price >= 1) {
                formattedPrice = '$' + price.toFixed(3);
            } else {
                formattedPrice = '$' + price.toFixed(4);
            }

            // Êõ¥Êñ∞‰ª∑Ê†º
            priceElem.textContent = formattedPrice;

            // Êõ¥Êñ∞Ê∂®Ë∑åÂπÖ
            const changeSign = priceChange >= 0 ? '+' : '';
            changeElem.textContent = changeSign + priceChange.toFixed(2) + '%';
            changeElem.className = 'ticker-change ' + (priceChange >= 0 ? 'positive' : 'negative');

            // ‰ª∑Ê†ºÂèòÂåñÂä®ÁîªÂíåÁÆ≠Â§¥
            if (previousPricesWS[symbol] !== undefined) {
                const prevPrice = previousPricesWS[symbol];

                if (price > prevPrice) {
                    // ‰ª∑Ê†º‰∏äÊ∂®
                    arrowElem.textContent = '‚ñ≤';
                    arrowElem.style.color = 'var(--success-light)';
                    tickerItem.classList.remove('price-down');
                    tickerItem.classList.add('price-up');

                    setTimeout(() => {
                        tickerItem.classList.remove('price-up');
                    }, 500);
                } else if (price < prevPrice) {
                    // ‰ª∑Ê†º‰∏ãË∑å
                    arrowElem.textContent = '‚ñº';
                    arrowElem.style.color = 'var(--danger-light)';
                    tickerItem.classList.remove('price-up');
                    tickerItem.classList.add('price-down');

                    setTimeout(() => {
                        tickerItem.classList.remove('price-down');
                    }, 500);
                }
            }

            previousPricesWS[symbol] = price;
        }

        // ÂêØÂä®Binance WebSocketËøûÊé•
        connectBinanceWebSocket();

        console.log('%c‚ö° ALPHA ARENA DASHBOARD', 'font-size: 20px; font-weight: bold; color: #2DD4BF;');
        console.log('%cDeepSeek-V3 UltraThink AI Trading System', 'font-size: 14px; color: #8B7FD8;');
        console.log('%cWebSocket ÂÆûÊó∂Êé®ÈÄÅÂ∑≤ÂêØÁî® (Âª∂Ëøü <100ms)', 'font-size: 12px; color: #10B981;');
    </script>

