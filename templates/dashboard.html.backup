        const audioContext = new (window.AudioContext || window.webkitAudioContext)();

        function playProfitSound() {
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();

            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            oscillator.frequency.value = 880;
            oscillator.type = 'sine';

            gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.3);

            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.3);
        }

        function playLossSound() {
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();

            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            oscillator.frequency.value = 220;
            oscillator.type = 'sawtooth';

            gainNode.gain.setValueAtTime(0.2, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.4);

            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.4);
        }

        // üéØ Êï∞Â≠óË∑≥Âä®Âä®ÁîªÂáΩÊï∞
        function animateNumber(element, targetValue, options = {}) {
            const {
                duration = 800,
                decimals = 2,
                prefix = '',
                suffix = '',
                useLocale = false,
                className = '',
                isPercentage = false
            } = options;

            const elementId = element.id;
            const currentValue = previousValues[elementId] || 0;

            if (currentValue === targetValue) return;

            const startValue = parseFloat(currentValue) || 0;
            const endValue = parseFloat(targetValue) || 0;
            const diff = endValue - startValue;
            const startTime = performance.now();

            element.style.transition = 'all 0.2s ease';
            element.style.transform = 'scale(1.05)';

            setTimeout(() => {
                element.style.transform = 'scale(1)';
            }, 150);

            function animate(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);

                const eased = 1 - Math.pow(1 - progress, 3);
                const current = startValue + (diff * eased);

                let displayValue;
                if (useLocale) {
                    displayValue = current.toLocaleString('en-US', {
                        minimumFractionDigits: decimals,
                        maximumFractionDigits: decimals
                    });
                } else {
                    displayValue = current.toFixed(decimals);
                }

                if (isPercentage && current > 0) {
                    displayValue = '+' + displayValue;
                }

                element.textContent = prefix + displayValue + suffix;

                if (className) {
                    element.className = className;
                }

                if (progress < 1) {
                    requestAnimationFrame(animate);
                } else {
                    previousValues[elementId] = endValue;
                }
            }

            requestAnimationFrame(animate);
        }

